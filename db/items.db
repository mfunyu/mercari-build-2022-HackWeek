CREATE TABLE IF NOT EXISTS items (
	id TEXT PRIMARY KEY,
	name TEXT,
	category_id TEXT,
	image TEXT,
	price INT,
	is_auction INT,
	on_sale INT
);

CREATE TABLE IF NOT EXISTS category (
	id TEXT PRIMARY KEY,
	name TEXT UNIQUE
);

CREATE TABLE IF NOT EXISTS auction (
	id TEXT PRIMARY KEY,
	bidder_name TEXT,
	items_id TEXT,
	bid_price INT,
	date_created TEXT,
	date_updated TEXT,
	FOREIGN KEY(items_id) REFERENCES items(id)
);